modules = ["python-3.11", "nodejs-20", "bash", "go-1.24", "nix", "nodejs-24", "docker", "pyright-extended", "pyright", "typescript-language-server", "rust-stable", "ruby-3.2", "python-base-3.13"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["bash", "cargo", "cargo-edit", "chrpath", "freetype", "glibcLocales", "hatch", "lcms2", "libffi", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "libyaml", "openjpeg", "pkg-config", "rustc", "scons", "tcl", "tk", "uv", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MCP Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Portal"

[[workflows.workflow]]
name = "MCP Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Web Portal"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web_portal && python -m mesop app.py --host=0.0.0.0 --port=5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
