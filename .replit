modules = ["python-3.11", "nodejs-20", "bash", "go-1.24", "nix", "nodejs-24", "docker", "pyright-extended", "pyright", "typescript-language-server", "rust-stable", "ruby-3.2", "python-base-3.13"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["SDL2", "SDL2_image", "SDL2_mixer", "SDL2_ttf", "bash", "cargo", "cargo-edit", "chrpath", "fontconfig", "freetype", "glibcLocales", "godot_4", "hatch", "lcms2", "libffi", "libiconv", "libimagequant", "libjpeg", "libpng", "libtiff", "libwebp", "libxcrypt", "libyaml", "openjpeg", "pkg-config", "portmidi", "rustc", "scons", "tcl", "tk", "uv", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AI Game Dev Server"

[[workflows.workflow]]
name = "AI Game Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv run python src/ai_game_dev/run_server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["python", "packages/mcp_server/main.py"]
