extends {{ script.base_class }}
class_name {{ script.class_name }}

# {{ script.description }}

{% for signal in script.signals %}
signal {{ signal.name }}{% if signal.params %}({{ signal.params | join(", ") }}){% endif %}
{% endfor %}

{% for export_var in script.exports %}
@export var {{ export_var.name }}: {{ export_var.type }}{% if export_var.default %} = {{ export_var.default }}{% endif %}
{% endfor %}

{% for var in script.variables %}
var {{ var.name }}: {{ var.type }}{% if var.default %} = {{ var.default }}{% endif %}
{% endfor %}

func _ready():
    {{ script.ready_body | default("pass") | indent(4) }}

{% for method in script.methods %}
func {{ method.name }}({% if method.params %}{{ method.params | join(", ") }}{% endif %}):
    {{ method.body | indent(4) }}

{% endfor %}