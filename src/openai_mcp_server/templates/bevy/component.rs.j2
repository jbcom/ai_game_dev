// {{ component.description }}
#[derive({{ component.derives | join(", ") }})]
pub struct {{ component.name }} {
{% for field_name, field_type in component.fields.items() %}
    pub {{ field_name }}: {{ field_type }},
{% endfor %}
}

{% if component.impl_methods %}
impl {{ component.name }} {
{% for method in component.impl_methods %}
    {{ method }}
{% endfor %}
}
{% endif %}